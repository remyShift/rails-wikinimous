<div class="flex flex-col w-1/2 flex-wrap gap-4 mt-3">
  <%= form_with model: article do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title, class: "w-full p-2 rounded-md border-2 border-slate-200 mb-2" %>
    <%= f.label :content %>
    <%= f.text_area :content, class: "w-full p-2 rounded-md border-2 border-slate-200 mb-2 h-48" %>
    <%= f.submit class: "bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-700 transition-colors cursor-pointer" %>
  <% end %>
  <%= link_to "Back", articles_path, class: "text-blue-500 hover:text-blue-700 transition-colors" %>
</div>
