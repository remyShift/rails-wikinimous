<%= render "header" %>

<div class="flex flex-col items-center justify-center flex-wrap gap-4 mt-3">
  <% @articles.each do |article| %>
  <div class="w-1/2 bg-slate-100 p-4 rounded-md">
    <h2 class="text-blue-500 text-lg font-bold hover:text-blue-700 hover:underline">
      <%= link_to article.title, article_path(article) %>
    </h2>
    <p class="truncate"><%= article.content %></p>
  </div>
  <% end %>
</div>
